extends ../layout

block content
  h5 Game Listing
  table(class="bordered striped reponsive-table")
    tr
      th title
      th id
      th created
      th creatorid
      th start
      th end
      th actual end
    each row in rows
      tr
        td= row.title
        td= row.id
        td= row.dtcreated
        td= row.hostuserid
        td= row.dtstart
        td= row.dtend
        td= row.dtactualend
      
  if user && user.roles && user.roles.indexOf('admin') !== -1
    hr
    br
    div(class="game-creation z-depth-1")
      h5 Create a new game
      
      if error
        ul(class="error-list error")
          each msg in error
            li= msg
      
      form(action="/" method="POST")
        p
          input(type="text" placeholder="title" required name="title")
        div(class="row")
          div(class="col s6")
            input(type="date" class="datepicker" placeholder="Start date" required name="startdate")
          div(class="col s6 all-game-info") All games will begin at 8AM and run for 72 hours
        p
          input(type="submit" value="Make a new Game!" class="waves-effect waves-light btn")
        
